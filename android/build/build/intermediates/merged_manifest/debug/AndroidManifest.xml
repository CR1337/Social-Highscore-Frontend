<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.DarkAI.SocialHighscore"
    android:installLocation="auto"
    android:versionCode="1"
    android:versionName="1.0" > <!-- glEsVersion is modified by the exporter, changing this value here has no effect. -->
    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="30" />

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <uses-feature
        android:glEsVersion="0x00030000"
        android:required="true" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="29" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="29" />

    <instrumentation
        android:name=".GodotInstrumentation"
        android:icon="@mipmap/icon"
        android:label="@string/godot_project_name_string"
        android:targetPackage="com.DarkAI.SocialHighscore" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="false"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/icon"
        android:label="@string/godot_project_name_string"
        android:requestLegacyExternalStorage="true" >
        <activity
            android:name="com.godot.game.GodotApp"
            android:configChanges="orientation|keyboardHidden|screenSize|smallestScreenSize|density|keyboard|navigation|screenLayout|uiMode"
            android:label="@string/godot_project_name_string"
            android:launchMode="singleTask"
            android:resizeableActivity="false"
            android:screenOrientation="portrait"
            android:theme="@style/GodotAppSplashTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Records the version of the Godot editor used for building -->
        <meta-data
            android:name="org.godotengine.editor.version"
            android:value="3.3.4.stable" /> <!-- Records the version of the Godot library -->
        <meta-data
            android:name="org.godotengine.library.version"
            android:value="3.3.4.stable" />

        <service android:name="org.godotengine.godot.GodotDownloaderService" />

        <meta-data
            android:name="org.godotengine.plugin.v1.GodotGetImage"
            android:value="com.gmail.lamelynx.godotgetimage.GodotGetImage" />

        <provider
            android:name="com.gmail.lamelynx.godotgetimage.GGIFileProvider"
            android:authorities="com.DarkAI.SocialHighscore.ggi_FileProvider"
            android:exported="false"
            android:grantUriPermissions="true" >
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/ggi_file_provider_paths" />
        </provider>
    </application>

</manifest>